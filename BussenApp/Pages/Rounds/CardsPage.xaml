<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BussenApp.Pages.Rounds.CardsPage"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Name="this"
             Padding="10, 20">

	<Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, *, Auto">
        <Button Grid.Column="1" HorizontalOptions="CenterAndExpand" Text="Nursel" Padding="20, 10" />

        <Button Grid.Row="1" Grid.Column="0" VerticalOptions="Center" Rotation="90" Text="Nursel" Padding="20, 10" />
        <Button Grid.Row="1" Grid.Column="2" VerticalOptions="Center" Rotation="-90" Text="Nursel" Padding="20, 10"/>
        <Button Grid.Row="2" Grid.Column="1" HorizontalOptions="CenterAndExpand" Text="Nursel" Padding="20, 10"/>


        <Border  Grid.Row="1" Grid.Column="1" Margin="0, 10" StrokeShape="RoundRectangle 10">
            <VerticalStackLayout   BackgroundColor="{StaticResource Secondary}">
                <Label HorizontalOptions="Center" FontSize="24">Rood of zwart</Label>
            </VerticalStackLayout>
        </Border>

    </Grid>


</ContentPage>